<div class="overlayWrapper">

  <div class="overlay">

    <h4 class="head">{{heading}}</h4>

    <button class="closeButton" {{action "hideOverlay" target="App.mainView"}}> &times; </button>

    {{view Ember.ContainerView currentViewBinding="showView"}}

    <div class="clear"></div>

  </div>

  <div id="fog" {{action "hideOverlay" target="App.mainView"}}></div>

</div>