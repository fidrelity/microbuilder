<div class="overlayWrapper">

  <div class="overlay">

    <h5 class="overlayhead">{{heading}}</h5>

    <div class="closeButton" {{action "hideOverlay" target="App.mainView"}}> &times; </div>

    {{view Ember.ContainerView currentViewBinding="showView"}}

    <div class="clear"></div>

  </div>

  <div style="height:100px"></div>

  <div id="fog" {{action "hideOverlay" target="App.mainView"}}></div>

</div>