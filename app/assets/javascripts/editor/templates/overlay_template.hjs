<div class="overlayWrapper">

  <div class="overlay">

    <h4 class="left">{{heading}}</h4>

    <button class="close right" {{action "hideOverlay" target="App.mainView"}}> &times; </button>

    <div class="clear"></div>

    <h3>{{currentHeading}}</h3>

    {{view Ember.ContainerView currentViewBinding="showView"}}

    <div class="clear"></div>

  </div>

  <div id="fog" {{action "hideOverlay" target="App.mainView"}}></div>

</div>