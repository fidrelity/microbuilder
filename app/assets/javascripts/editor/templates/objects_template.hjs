<div id="overlayLeft">

  <div id="objects">

    {{view GameObjectsView
      contentBinding = "App.gameObjectsController.content"
      observerBinding = "App.gameObjectsController"
    }}

    <div class="clear"></div>

  </div>
  
  <button class="btn" {{action "searchGraphic" target="App.gameController"}}> + object </button>

</div>

<div id="overlayRight">
  
  {{#if App.gameObjectsController.current}}

    {{#view GameObjectView contentBinding = "App.gameObjectsController.current"}}

      <div
          {{bindAttr style="divStyle"}}
          class="libraryGraphic left">
      </div>

      <div class="left" style="margin-left:15px">

        {{view Ember.TextField valueBinding="content.name" maxlength="16"}}
        
        <div class="btn-group">

          <button class="btn" {{action "duplicate"}}> duplicate </button>
          <button class="btn" {{action "remove"}}> delete </button>

        </div>
      
      </div>
      
      <div class="clear"></div>

    {{/view}}
  
    <h4 style="margin: 15px 0"> Behaviours </h4>

    <ul id="behaviours">
      {{#view BehaviourView 
        contentBinding = "App.behaviourController.startBehaviour"
        controllerBinding = "App.behaviourController"
      }}
        <li class="top">
      
          <div class="left title"> on start </div>
      
          <div class="left">
      
            <ul>

              {{#each content.actions}}

                {{#view RemoveView 
                  contentBinding = "this"
                  controllerBinding = "parent.actions"
                }}

                  <li>
                    <button class="btn right" {{action "remove"}}> X </button>
                    <div class="text">{{content.string}}</div>
                  </li>
  
                {{/view}}

              {{/each}}
              
              <li>
                <button class="btn" {{action "addAction"}}> + action </button>
              </li>
              
            </ul>
        
          </div>
      
          <div class="clear"></div>
        
        </li>
      {{/view}}

      {{#each App.behaviourController}}
        {{#view BehaviourView 
          contentBinding = "this"
          controllerBinding = "App.behaviourController"
        }}
          <li>
        
            <div class="left title"> if </div>
        
            <div class="left">
              
              <ul>
    
                {{#each content.triggers}}
    
                  {{#view RemoveView 
                    contentBinding = "this"
                    controllerBinding = "parent.triggers"
                  }}
      
                    <li>
                      <button class="btn right" {{action "remove"}}> X </button>
                      <div class="text">{{content.string}}</div>
                    </li>
        
                  {{/view}}
      
                {{/each}}
                
                <li>
                  <button class="btn" {{action "addTrigger"}}> + trigger </button>
                </li>
    
              </ul>
        
            </div>
  
            <div class="left title"> then </div>
  
            <div class="left">
        
              <ul>
    
                {{#each content.actions}}
    
                  {{#view RemoveView 
                    contentBinding = "this"
                    controllerBinding = "parent.actions"
                  }}
      
                    <li>
                      <button class="btn right" {{action "remove"}}> X </button>
                      <div class="text">{{content.string}}</div>
                    </li>
        
                  {{/view}}
      
                {{/each}}
                
                <li>
                  <button class="btn" {{action "addAction"}}> + action </button>
                </li>
    
              </ul>
        
            </div>
            
            <div class="btn-group right">
              <button class="btn" {{action "duplicate"}}> duplicate </button>
              <button class="btn" {{action "remove"}}> delete </button>
            </div>
            
            <div class="clear"></div>
        
          </li>
        {{/view}}
      {{/each}}
    </ul>

    <div class="clear"></div>

    <button class="btn" {{action "createBehaviour" target="App.behaviourController"}}> + behaviour </button>
  
  {{else}}

    <p>Select an Object on the left.</p>
  
  {{/if}}

</div>
