<h3>Stage</h3>

<div id="stageControls">
  <button {{action "showObjects" target="App.gameController"}}> objects </button>
  <button {{action "searchBackground" target="App.gameController"}}> background </button>
  <div>duration:</div>
  <div id="slider"></div>
  <div>{{App.game.duration}} seconds</div>
</div>

<div class="clear"></div>

{{view PlayerView 
  type="stage"
  canvasID="stageCanvas"
  playerBinding="player"
}}

<div style="float: left">

  <button {{action "play"}}> play </button>
  <button {{action "stop"}}> stop </button>
  <button {{action "debug"}}> debug on/off </button>

</div>

{{#if gameObject}}
{{#unless gameObject}}
  <div style="border: 1px solid gray; margin: 5px; float: left">

    {{#view GameObjectView contentBinding = "gameObject"}}

        <img {{bindAttr src="content.graphic.imagePath"}} style="width:64px;height:64px;display:inline" />

        {{view Ember.TextField valueBinding="content.name" maxlength="32" size="10"}}

        <button {{action "changeArt"}}> change art </button>
        <button {{action "toTop"}}> to top </button>
        <button {{action "remove"}}> delete </button>

    {{/view}}

  </div>
{{/unless}}
{{/if}}

<div class="clear"></div>
