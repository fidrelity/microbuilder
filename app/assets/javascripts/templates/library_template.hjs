<h2>Library</h2>

<p>Select and item or create a new one</p>

<ul class="graphics">
  {{#each App.libraryController.assetController}}
    {{#view App.libraryController.assetController.viewClass graphicBinding="this"}}
      <li {{action "select"}}>
        <img {{bindAttr src="graphic.imagePath"}} alt="graphic"></img>
        <p>{{graphic.name}}</p>
      </li>
    {{/view}}
  {{/each}}
</ul>

<div class="clear"></div>

<button {{action "cancel" target="App.gameController"}}>cancel</button>
<button {{action "drawGraphic" target="App.gameController"}}>new</button>