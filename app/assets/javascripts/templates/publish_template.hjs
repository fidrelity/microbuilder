<label>game title: </label>
{{view Ember.TextField valueBinding="game.title" size="10" placeholder="insert name" maxlength="3"}}
<br />

<label>instructions: </label>
{{view Ember.TextField valueBinding="game.instructions" placeholder="(140 chars max)" maxlength="140"}}
<br />

{{view PlayerView 
  type="test"
  canvasID="testCanvas"
  playerBinding="player"
}}

<button {{action "publishGame" target="App.gameController"}}>publish</button>
<button {{action "takePreviewSnapshot" target="App.gameController"}}>Take Snapshot</button>

<ul id="thumbnail">

</ul>