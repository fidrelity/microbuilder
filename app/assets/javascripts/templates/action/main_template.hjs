<h2>Action/Trigger Editor</h2>

{{dynamicView App.actionController.contentView}}

{{#if action.isWin}}
  <h3>Win Action</h3>
{{/if}}

{{#if action.isLose}}
  <h3>Lose Action</h3>
{{/if}}

{{#if action.isComplete}}
  <button {{action "save" target="App.actionController"}}> save </button>
  <br />
{{/if}}

<button {{action "cancel" target="App.gameController"}}>cancel</button>
