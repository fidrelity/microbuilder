#profilewrap
  .avatar_profile
    %img{:src => user.display_image, :id => "profileimage"}
    = link_to "change avatar", "http://gravatar.com", :target => "_blank"
  %div{:id => "profile_name_wrapper"}

    %span{:id => "display_name"}

      =user.display_name

    - if current_user == user
          
      =form_for user, :remote => true, :html => {:id => "display_name_form", :class => "form-inline"} do |f|
        =f.text_field :display_name, :class => "span2"
        =f.submit "Save", :class => "btn"

    %a{:class => "edit"}
      edit
    
  %p
    member since
    %br
    %span
      =user.created_at.to_date