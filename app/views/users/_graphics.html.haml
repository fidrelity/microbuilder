%h2="Graphics (#{user.graphics.size})"
%ul{:class => "thumbnails"}
  -user.graphics.each do |graphic|
    %li{:class => "span2"}
      %div{:class => "thumbnail"}
        %img{:src => graphic.image}
        =link_to("[x]", graphic_path(graphic), :method => :delete, :remote => true, :confirm => "Permanently delete this graphic?")
        =graphic.name