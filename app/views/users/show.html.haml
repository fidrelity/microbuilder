%div{ :class => "row", :id => "profile"}
  
  %div{ :class => "span3"}    
    =render :partial => 'profile', :locals => {:user => @user}

  %div{ :class => "span9"}
    #messages{:class => "well"}   
      = render :partial => 'shared/stream', :locals => {:messages => @messages}

    %div{:class => "btn-group", :style => "margin-bottom:1em"}

      %button{:class => "btn gamesButton tabButton btn-info"}
        Games
        = "(#{@games_size})"

      %button{:class => "btn graphicsButton tabButton"}
        Graphics
        = "(#{@graphics_size})"

      %button{:class => "btn backgroundButton tabButton"}
        Backgrounds
        = "(#{@backgrounds_size})"

    = render :partial => 'games', :locals => {:games => @games, :user => @user}
    = render :partial => 'graphics', :locals => {:graphics => @graphics,
      :user => @user,
      :backgrounds => @backgrounds,
      :backgrounds_size => @backgrounds_size,
      :graphics_size => @graphics_size}
      
