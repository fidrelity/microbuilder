%div{:class=>"row"}

  %div{:class=>"span2"}
    &nbsp;

  %div{:class=>"span8"}
    %h2=@game.title
    =link_to "by #{@game.author.display_name}", user_path(@game.author)
    %canvas{:id => "playerCanvas", :width => 640, :height => 390}
  
    %textarea{:cols =>"150", :rows =>"1", :class=>"span8"}
      <iframe width="640" height="390" src="#{root_url}play/#{@game.id}/embed" frameborder="0"></iframe>

    %div{:class=>"btn-group"}
      %button{:class=>"btn"}
        <i class="icon-retweet"></i> Share
      %button{:class=>"btn"}
        <i class="icon-flag"></i> Report
      %button{:class=>"btn likeButton", "data-id" => @game.id}
        <i class="icon-thumbs-up"></i> Like
        %span{:class=>"likeValue"}
          =@game.likes
      %button{:class=>"btn likeButton dislikeButton", "data-id" => @game.id}
        <i class="icon-thumbs-down"></i> Dislike 
        %span{:class=>"dislikeValue"}
          =@game.dislikes

      %div{:class => "progress progress-success", :style => "background:#FF0000;"}
        %div{:class => "bar", :style => "width:#{@game.likes}%;"}

    %div{:class=>"row", :style => "margin-top:2em", :id => "commentsWrapper"}
      = render :partial => 'comments', :locals => {:comments => @comments, :game => @game}


:javascript
  $(document).ready( function() {
    player_main( #{@game.data} );
  });
  