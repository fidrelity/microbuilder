%div{:class => "well layer", :id => "shareLayer"}
  %a{:class=>"close closeLayer"}
    &times;
  %h4 Share this game on:
  %div{:id=>"fb-root"}
  .fshare
    %script{:src => "http://connect.facebook.net/en_US/all.js#xfbml=1"}
    %fb:like{:layout => "button_count", :show_faces => "false", :width => "450"}
  .twshare
  %a.twitter-share-button.left{"data-count" => "horizontal", "data-via" => "playtin", "data-text" => "this game is awesome!", "data-hashtags" => "minigame", :href => "http://twitter.com/share"}
    %script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
  .gplusshare
    %script{:type => "text/javascript", :src => "https://apis.google.com/js/plusone.js"}
    .gplusshare{:class => "g-plusone", :href => play_url(game)}