  = button_to "Like (#{game.likes})", like_game_path(game.id), :method => :put, :remote => true, :class => "btn likeButton", :id => "like"

%div{:class => 'span4'}
  %div{:class => "progress progress-success", :style => "background:#FF0000;"}
    %div{:class => "bar", :style => "width:#{game.rating * 100}%;"}

