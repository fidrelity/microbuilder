<%= head_line("sign", "in") %>

<div class="row">

  <div class="span3 well">
    
    <div class="form">      

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      
        <label>email</label>
        <%= f.email_field :email %>
        
        <label>password</label>
        <%= f.password_field :password %>
        
        <p><button type="submit" class="btn">sign in</button></p>

        <p class="checkbox">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> remember me
          <% end -%>
        </p>

      <% end %>
  
      <p class="misc"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>

    </div>

  </div>

  <div class="span3 well" style="min-height:238px;">
    <p>If you don't already have an account:</p>
    <p>
       <%= link_to button_line("sign", "up"), new_user_registration_path, :class => "link-line" %>
    </p>
    <br />
    <p>You can also skip the whole registration process with:</p>
    <p>
      <%= link_to(image_tag("facebook_login.png"), user_omniauth_authorize_path(:facebook)) %>
    </p>
  </div>

</div>